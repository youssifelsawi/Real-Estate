<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Property</title>
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/adminlte/dist/css/adminlte.min.css">
</head>

<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
    <div class="app-wrapper">
        <nav class="app-header navbar navbar-expand bg-body" style="min-height: 50px;">
            <div class="container-fluid"></div>
        </nav>

        <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
            <div class="sidebar-brand">
                <a href="/Properties" class="brand-link">
                    <span class="brand-text fw-light">Dashboard</span>
                </a>
            </div>
            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <ul class="nav sidebar-menu flex-column" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/blogs" class="nav-link">
                                <p>Blogs</p>
                                <i class="nav-arrow fas fa-chevron-right"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/services" class="nav-link">
                                <p>Services</p><i class="nav-arrow fas fa-chevron-right"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Properties" class="nav-link">
                                <p>Properties</p><i class="nav-arrow fas fa-chevron-right"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Images" class="nav-link">
                                <p>Images</p><i class="nav-arrow fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <main class="app-main">
            <div class="app-content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="mb-0">Edit Property</h3>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Edit Property</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <div class="app-content">
                <div class="container-fluid">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="card card-primary card-outline mb-4">
                                <div class="card-header">
                                    <div class="card-title">Edit Property</div>
                                </div>

                                <form id="editPropertyForm" enctype="multipart/form-data">
                                    <div class="card-body">
                                        <% if (errors.length > 0) { %>
                                            <div class="alert alert-danger">
                                                <ul>
                                                    <% errors.forEach(function(error) { %>
                                                        <li><%= error %></li>
                                                    <% }) %>
                                                </ul>
                                            </div>
                                        <% } %>

                                        <div class="mb-3">
                                            <label for="category">Category</label>
                                            <input type="text" class="form-control" id="category" name="category" value="<%= property.category %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="name">Property Name</label>
                                            <input type="text" class="form-control" id="name" name="name" value="<%= property.name %>" required minlength="5" maxlength="255">
                                        </div>

                                        <div class="mb-3">
                                            <label for="location">Location</label>
                                            <input type="text" class="form-control" id="location" name="location" value="<%= property.location %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="author">Author</label>
                                            <input type="text" class="form-control" id="author" name="author" value="<%= property.author %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="img_author">Image Author</label>
                                            <input type="file" class="form-control-file" id="img_author" name="img_author">
                                            <% if (property.img_author && property.img_author.path) { %>
                                                <img src="/<%= property.img_author.path %>" alt="Image Author" style="width: 150px; margin-top: 10px;">
                                            <% } else { %>
                                                <p>No author image available</p>
                                            <% } %>
                                        </div>

                                        <div class="mb-3">
                                            <label for="BedsNo">Number of Beds</label>
                                            <input type="number" class="form-control" id="BedsNo" name="BedsNo" value="<%= property.BedsNo %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="BathsNo">Number of Baths</label>
                                            <input type="number" class="form-control" id="BathsNo" name="BathsNo" value="<%= property.BathsNo %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="sqFt">Square Feet</label>
                                            <input type="number" class="form-control" id="sqFt" name="sqFt" value="<%= property.sqFt %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="price">Price</label>
                                            <input type="number" class="form-control" id="price" name="price" value="<%= property.price %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="img">Property Image</label>
                                            <input type="file" class="form-control-file" id="img" name="img">
                                            <% if (property.img && property.img.path) { %>
                                                <img src="/<%= property.img.path %>" alt="Property Image" style="width: 150px; margin-top: 10px;">
                                            <% } else { %>
                                                <p>No image available</p>
                                            <% } %>
                                        </div>

                                        <div class="mb-3">
                                            <button type="submit" class="btn btn-primary">Update Property</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                <a href="/properties/new" class="btn btn-success">Add Property</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="/adminlte/dist/js/adminlte.min.js"></script>

    <script>
        document.getElementById("editPropertyForm").addEventListener("submit", async function (event) {
            event.preventDefault();

            const form = document.getElementById("editPropertyForm");
            const formData = new FormData(form);
            const propertyId = "<%= property._id %>"; // Get property ID

            try {
                const response = await fetch(`/properties/${propertyId}`, {
                    method: 'PUT',
                    body: formData
                });

                if (response.ok) {
                    alert("Property updated successfully");
                    window.location.href = "/properties";  // Redirect to properties list
                } else {
                    const errorData = await response.json();
                    alert("Failed to update property: " + errorData.join(", "));
                }
            } catch (error) {
                console.error("Error:", error);
                alert("An error occurred while updating the property");
            }
        });
    </script>
</body>

</html>
