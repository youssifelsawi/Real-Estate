<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Blog</title>
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/adminlte/dist/css/adminlte.min.css">
</head>

<body class="layout-fixed sidebar-expand-lg bg-body-tertiary">
    <div class="app-wrapper">
        <nav class="app-header navbar navbar-expand bg-body" style="min-height: 50px;">
            <div class="container-fluid"></div>
        </nav>

        <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
            <div class="sidebar-brand">
                <a href="/blogs" class="brand-link">
                    <span class="brand-text fw-light">Dashboard</span>
                </a>
            </div>
            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <ul class="nav sidebar-menu flex-column" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/blogs" class="nav-link">
                                <p>Blogs</p>
                                <i class="nav-arrow fas fa-chevron-right"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/services" class="nav-link">
                                <p>Services</p><i class="nav-arrow fas fa-chevron-right"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Properties" class="nav-link">
                                <p>Properties</p><i class="nav-arrow fas fa-chevron-right"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Images" class="nav-link">
                                <p>Images</p><i class="nav-arrow fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <main class="app-main">
            <div class="app-content-header">
                <div class="container-fluid">
                    <h3 class="mb-0">View Blog</h3>
                </div>
            </div>

            <div class="app-content">
                <div class="container-fluid">
                    <div class="card card-primary card-outline mb-4">
                        <div class="card-header">
                            <h5 class="card-title">Blog Details</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>Category:</strong>
                                <p><%= blog.category %></p>
                            </div>

                            <div class="mb-3">
                                <strong>Title:</strong>
                                <p><%= blog.title %></p>
                            </div>

                            <div class="mb-3">
                                <strong>Description:</strong>
                                <p><%= blog.description %></p>
                            </div>

                            <div class="mb-3">
                                <strong>Date:</strong>
                                <p><%= blog.date.toDateString() %></p>
                            </div>

                            <div class="mb-3">
                                <strong>Image:</strong><br>
                                <% if (blog.img && blog.img.path) { %>
                                    <img src="/uploads/<%= blog.img.path.split('/').pop() %>" alt="Blog Image" style="width: 300px; object-fit: cover;" />
                                <% } else { %>
                                    <p>No image available</p>
                                <% } %>
                            </div>

                            <div class="mb-3">
                                <a href="/blogs" class="btn btn-primary">Back to Blogs</a>
                                <a href="/blogs/<%= blog._id %>/edit" class="btn btn-warning">Edit Blog</a>
                                <form action="/blogs/<%= blog._id %>" method="POST" style="display:inline;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger">Delete Blog</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="/adminlte/dist/js/adminlte.min.js"></script>
</body>

</html>
